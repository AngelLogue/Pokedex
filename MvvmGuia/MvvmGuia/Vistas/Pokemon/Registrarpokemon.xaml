<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmGuia.Vistas.Pokemon.Registrarpokemon"
             NavigationPage.HasNavigationBar="False"
             >
    <ScrollView>

        <Grid RowDefinitions="80,*"
          BackgroundColor="#1D1D1D">

            <StackLayout Orientation="Horizontal"
                     Margin="10">

                <Image Source="https://i.ibb.co/r6d9rnQ/volver.png"
                   Margin="10"
                       HeightRequest="25"
                       >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding Volvercommand}"/>
                    </Image.GestureRecognizers>
                </Image>
                <Image Source="https://upload.wikimedia.org/wikipedia/commons/thumb/9/98/International_Pok%C3%A9mon_logo.svg/2560px-International_Pok%C3%A9mon_logo.svg.png"
                   HorizontalOptions="CenterAndExpand"/>
                <Image Source="https://seeklogo.com/images/P/pokeball-logo-DC23868CA1-seeklogo.com.png"/>

            </StackLayout>
            <StackLayout Grid.Row="1"
                     Margin="10">
                <StackLayout Orientation="Horizontal">

                    <Label Text="Nombre:            "
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                    <Entry Placeholder="Ingrese el nombre"
                       FontAttributes="Bold"
                       TextColor="#FFEB72"
                       PlaceholderColor="White"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtnombre}"
                       />

                </StackLayout>
                <StackLayout Orientation="Horizontal">

                    <Label Text="Color fondo:     "
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                    <Entry Placeholder="Ingrese el color fondo"
                       FontAttributes="Bold"
                       TextColor="{Binding Txtcolorfondo}"
                       PlaceholderColor="White"
                       TextTransform="Lowercase"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtcolorfondo}"
                       />

                </StackLayout>
                <StackLayout Orientation="Horizontal">

                    <Label Text="Número:            "
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                    <Entry Placeholder="Ingrese Nro"
                       FontAttributes="Bold"
                       TextColor="White"
                       PlaceholderColor="White"
                       TextTransform="Lowercase"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtnro}"
                       />

                </StackLayout>
                <StackLayout Orientation="Horizontal">

                    <Label Text="Icono:                 "
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                    <Entry Placeholder="Ingrese icono"
                       FontAttributes="Bold"
                       TextColor="White"
                       PlaceholderColor="White"
                       TextTransform="Lowercase"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txticono}"
                       />

                </StackLayout>
                <StackLayout Orientation="Horizontal">

                    <Label Text="Poder:                 "
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                    <Entry Placeholder="Ingrese poder"
                       FontAttributes="Bold"
                       TextColor="White"
                       PlaceholderColor="White"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtpoder}"
                       />

                </StackLayout>
                <StackLayout Orientation="Horizontal">

                    <Label Text="Color poder:       "
                       TextColor="White"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                    <Entry Placeholder="Ingrese el color poder"
                       FontAttributes="Bold"
                       TextColor="{Binding Txtcolorpoder}"
                       PlaceholderColor="White"
                       TextTransform="Lowercase"
                       FontSize="20"
                       HorizontalOptions="StartAndExpand"
                       Text="{Binding Txtcolorpoder}"
                       />

                </StackLayout>
                <StackLayout Orientation="Horizontal"
                         HorizontalOptions="Center">

                    <Image Source="https://i.ibb.co/jzBptmj/visibilidad.png" 
                       HeightRequest="20"/>
                    <Label Text="Vista Previa"
                       FontSize="20"
                       TextColor="White"
                       FontAttributes="Italic"
                       VerticalOptions="Center"
                       />

                </StackLayout>
                <Grid RowDefinitions="100,*"
                  Margin="0,40,0,0"
                  >

                    <Frame Grid.Row="1" 
                       WidthRequest="250" 
                       HorizontalOptions="Center"
                       CornerRadius="15"
                       Margin="0,-38,0,0"
                       BackgroundColor="{Binding Txtcolorfondo}"
                       >
                        <StackLayout Margin="0,90,0,0">
                            <Label Text="{Binding Txtnro}" />
                            <Label Text="{Binding Txtnombre}" 
                               CharacterSpacing="1"
                               FontSize="20"
                               Margin="0,0,0,10"
                               />
                            <Button Text="{Binding Txtpoder}"
                                CornerRadius="30"
                                HorizontalOptions="Start"
                                TextTransform="None"
                                HeightRequest="40"
                                BackgroundColor="{Binding Txtcolorpoder}"
                                />
                        </StackLayout>
                    </Frame>

                    <Image Source="{Binding Txticono}"
                       Grid.RowSpan="2"
                       HeightRequest="180"
                       VerticalOptions="StartAndExpand"
                       />

                </Grid>
                <Frame HorizontalOptions="Center"
                   Padding="6"
                   Margin="0,30,0,0"
                   CornerRadius="15"
                   HasShadow="False"
                   BackgroundColor="#FFE548"
                   >

                    <Button Text="+"
                        HorizontalOptions="Center"
                        BackgroundColor="#FFE15D"
                        BorderColor="#FFF288"
                        BorderWidth="6" 
                        CornerRadius="15"
                        FontAttributes="Bold"
                        FontSize="25"
                        WidthRequest="60"
                        HeightRequest="60"
                        Command="{Binding InsertarCommand}"
                        />
                </Frame>

            </StackLayout>

        </Grid>

    </ScrollView>
</ContentPage>